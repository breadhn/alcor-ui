{
    "ts-node": {
        "files": true
    },
    "files": [
        "server/global.d.ts"
    ],
    "paths": {
        "*": ["server/*.d.ts"]
    },
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "*"
            ]
        },
        "outDir": "./lib",
        "allowJs": true,
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "commonjs",
        "lib": ["DOM"],
        "sourceMap": true
    },

    "include": [
        "./units/**/*",
        "./assets/**/*",
        "./server/**/*",
        "./config.js"
    ]
}
